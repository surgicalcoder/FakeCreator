@using RazorEngine
@inherits RazorEngine.Templating.TemplateBase<FakeCreator.Mapping>
    
import {NgModule}       from '@@angular/core';
import {CommonModule}   from '@@angular/common';
import {FormsModule}    from '@@angular/forms';
import {ReactiveFormsModule } from '@@angular/forms';
import {RouterModule, Routes} from "@@angular/router";

import {@Model.Name.ToLower()ListComponent} from './@Model.Name.ToLower()-list.component'
import {@Model.Name.ToLower()Service} from './@Raw(Model.Name.ToLower() + ".service")'
import {@Model.Name.ToLower()DetailComponent} from "./@Model.Name.ToLower()-detail.component";
import {@Model.Name.ToLower()EditComponent} from "./@Model.Name.ToLower()-edit.component";

import {AuthGuard} from "../_common/auth.guard";

const routes: Routes = [
    { path: '',  component: @Model.Name.ToLower()ListComponent, canActivate: [AuthGuard] },
    { path: 'view/:id', component: @Model.Name.ToLower()DetailComponent, canActivate: [AuthGuard] },
    { path: 'edit/:id', component: @Model.Name.ToLower()EditComponent, canActivate: [AuthGuard] }
];

@@NgModule({
    imports: [
        CommonModule,
        FormsModule,
        ReactiveFormsModule,
        RouterModule.forChild(routes)
    ],
    declarations: [
        @Model.Name.ToLower()ListComponent,
        @Model.Name.ToLower()DetailComponent,
        @Model.Name.ToLower()EditComponent
    ],
    providers: [@Model.Name.ToLower()Service]
})
export class @Model.Name.ToLower()Module {}